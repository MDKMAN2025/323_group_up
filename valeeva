Функция ОбъединитьСтроки(МассивСтрок)
    Результат = "";
    Для i = 0 По МассивСтрок.Количество() - 1 Цикл
        Результат = Результат + МассивСтрок[i];
        Если i < МассивСтрок.Количество() - 1 Тогда
            Результат = Результат + ", ";
        КонецЕсли;
    КонецЦикла;
    Возврат Результат;
КонецФункции

Массив = Новый Массив;
Массив.Добавить("Яблоко");
Массив.Добавить("Банан");
Массив.Добавить("Вишня");

// Сообщаем результат объединения строк
Сообщить(ОбъединитьСтроки(Массив));
